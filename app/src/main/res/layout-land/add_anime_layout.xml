<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.add_anime.AddanimeFragment"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/lato_bold"
        android:paddingTop="10dp"
        android:text="@string/add_new_anime"
        android:textColor="@color/imdb_yellow"
        android:textSize="30sp" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/imdb_grey"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/imdb_yellow"
                android:textColorHint="@color/imdb_yellow">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Anime_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/imdb_yellow"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="@string/enter_anime_title"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:fontFamily="@font/lato_bold"
                    tools:ignore="TouchTargetSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/imdb_yellow"
                android:textColorHint="@color/imdb_yellow">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Anime_Desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/imdb_yellow"
                    android:gravity="center"
                    android:hint="@string/enter_anime_description"
                    android:inputType="text"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/white"
                    tools:ignore="TouchTargetSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/imdb_yellow"
                android:textColorHint="@color/imdb_yellow">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Anime_ep_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/imdb_yellow"
                    android:gravity="center"
                    android:fontFamily="@font/lato_bold"
                    android:hint="@string/enter_number_of_episodes"
                    android:inputType="number"
                    android:textColor="@color/white"
                    tools:ignore="TouchTargetSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/imdb_yellow"
                android:textColorHint="@color/imdb_yellow">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Anime_year_rel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/imdb_yellow"
                    android:gravity="center"
                    android:hint="@string/enter_released_year"
                    android:inputType="number"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/white"
                    tools:ignore="TouchTargetSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>


            <ImageView
                android:id="@+id/image_added"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/AddImage_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/lato_bold"
                android:backgroundTint="@color/imdb_yellow"
                android:text="@string/add_image"
                android:textColor="@color/black" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/Add_anime_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/lato_bold"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/imdb_yellow"
        android:text="@string/add_anime"
        android:textColor="@color/black" />


</LinearLayout>
</ScrollView>